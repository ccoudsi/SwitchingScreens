<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.ccoudsi.switchingscreens.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_get_the_name_text_view"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go get It"
        android:layout_marginTop="20dp"
        android:onClick="onGetnameClick"/>

    <TextView
        android:id="@+id/user_name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name_sent_back"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>

